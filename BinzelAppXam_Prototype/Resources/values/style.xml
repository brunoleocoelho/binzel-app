<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Tema aplicado a toda a aplicação -->
  <!-- @android:style/ThemeOverlay.Material.Dark.ActionBar -->
  <style name="Binzel" parent="@android:style/Theme.Material.Light.DarkActionBar">
    <!-- desativando a ActionBar default do Android-->
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>    
    <!-- cor da barra de notificações -->
    <item name="android:statusBarColor">@color/dark_Lilac</item>    
    <!-- cores p/ nova ActionBar (title bar)-->
    <item name="android:colorPrimary">@color/app_Lilac</item>
    <item name="android:colorPrimaryDark">@color/app_Lilac</item>
    <item name="android:windowBackground">@color/back_White</item>
    <item name="android:textColorPrimary">@color/black</item>
    <item name="android:textColorSecondary">@color/white</item>       
    <!-- cor padrão p/ os buttons -->    
    <item name="android:colorButtonNormal">@color/app_Lilac</item>       
    <!-- sobrepondo cores de alguns controles -->
    <item name="android:colorAccent">@color/app_Lilac</item>    
    <item name="android:colorControlActivated">@color/light_Lilac</item>
    <item name="android:colorControlNormal">@color/dark_Lilac</item>
  </style>

  <!-- Tema aplicado a tela de SPLASH-->
  <style name="Theme.Splash" parent ="@android:style/Theme.DeviceDefault.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>  
    <item name="android:windowFullscreen">true</item>  
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:colorPrimary">@android:color/transparent</item>
    <item name="android:colorPrimaryDark">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>  
    <item name="android:windowActionBar">true</item>
  </style>
    
</resources>